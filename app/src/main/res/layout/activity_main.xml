<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:textColor="#F44336"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student HandBook"/>

    <Button
        android:textColor="@color/black"
        android:backgroundTint="#FFF300"
        android:layout_marginStart="50dp"
        android:id="@+id/btn_student"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:text="Student"
        android:layout_centerHorizontal="true"/>

    <Button
        android:backgroundTint="#03A9F4"
        android:layout_marginStart="50dp"
        android:id="@+id/btn_subject"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_student"
        android:text="Subject"
        android:layout_centerHorizontal="true"/>

    <Button
        android:backgroundTint="#FF9800"
        android:layout_marginStart="50dp"
        android:id="@+id/btn_author"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_subject"
        android:text="Author"
        android:layout_centerHorizontal="true"/>

    <Button
        android:backgroundTint="#009688"
        android:layout_marginStart="50dp"
        android:id="@+id/btn_exit"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_author"
        android:text="Exit"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>